[core]
	excludesfile = /Users/cmoel/.gitignore_global
	editor = vim
	autocrlf = input
	pager = less -FRSX
[diff]
	tool = vimdiff
[alias]
	co = checkout
	dc = diff --cached
	st = status
	ci = commit -v
	di = diff
	br = branch
	df = diff
	hist = log --graph --decorate --oneline --all
	who = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
	glog = log -E -i --grep
	stash = stash -u
[user]
	name = Christopher Moeller
	email = cmoel@me.com
[color]
	ui = true
[merge]
	tool = vimdiff
	ff = only
[hub]
	protocol = https
[pull]
	rebase = true
[apply]
	whitespace = nowarn
[push]
	default = upstream
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[github]
	user = cmoel
[rebase]
	autosquash = true
[gitsh]
	noGreeting = true
	defaultCommand = status --short --branch && :echo
[fetch]
	prune = true
